@model aura.flowers.Models.Account.ChangePasswordViewModel
@{
    ViewBag.Title = "Password change";
}

<div class="row justify-content-center align-items-center" style="height: 90vh;">
    <div class="form-group row p-3">
        <div class="col-12 text-center">
            <h3 class="h3 pb-3">Password change for @Model.Email</h3>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="ChangePassword" asp-controller="Account">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group">
                            <label asp-for="NewPassword" class="form-control-plaintext text-bold">New password</label>
                            <input type="text" asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-6">
                                <input type="submit" class="btn btn-block btn-primary" value="Save" />
                            </div>
                            <div class="col-6">
                                <a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Account">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>