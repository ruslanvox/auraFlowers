@model aura.flowers.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Unitronics Login";
}

<div class="row justify-content-center align-items-center" style="height: 90vh;">
    <div class="form-group row p-3">
        <div class="col-12 text-center">
            <h3 class="h3 pb-3">Login to Unitronics</h3>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="form-group">
                            <label asp-for="Email" class="form-control-plaintext text-bold"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-control-plaintext text-bold"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-block btn-primary" value="Sign In" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>