@model ContactUsViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Config;

<div class="md-modal md-effect-12">
    <div class="md-content">
        <div class="md-header">
            <h1>@Localizer["contact-us-title"]<br><span>@Localizer["contact-us-subtitle"]</span></h1>
            <a class="md-close">@Localizer["contact-us-title-close"] <i class="fa fa-times"></i></a>
        </div>

        <form asp-action="SendMessage" asp-controller="Home" id="contact-us-form">
            <div class="form-input-data">
                <p>@Localizer["contact-us-name"] <span>*</span></p>
                <input asp-for="Name" class="input-text">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-input-data">
                <p>@Localizer["contact-us-email"] <span>*</span></p>
                <input asp-for="Email" class="input-text" type="email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-input-data">
                <p>@Localizer["contact-us-message"] <span>*</span></p>
                <textarea asp-for="Message" class="input-text" rows="5" cols="500"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-input-data">
                <p>@Localizer["contact-us-product"]</p>
                <select asp-for="SelectedProductId" class="input-text">
                    <option value="0">@Localizer["contact-us-product-select"]</option>
                    <option value="1">@Localizer["contact-us-product-lamps"]</option>
                    <option value="2">@Localizer["contact-us-product-framework"]</option>
                    <option value="3">@Localizer["contact-us-product-bigflowers"]</option>
                    <option value="4">@Localizer["contact-us-product-wings"]</option>
                    <option value="5">@Localizer["contact-us-product-walls"]</option>
                    <option value="6">@Localizer["contact-us-product-material"]</option>
                </select>
            </div>
            <div class="md-contact-form-send-captcha">
                <div class="g-recaptcha g-recaptcha-not-robot" data-sitekey="@Config["GoogleRecaptchaConfiguration:Key"]"></div>
                <button class="form-button" type="submit">@Localizer["contact-us-send"]</button>
            </div>
            <span id="backend-validation-error" class="text-danger" style="display: none;">
                @Localizer["contact-us-backend-validation"]
            </span>
        </form>
    </div>
</div>

<div class="md-overlay"></div>